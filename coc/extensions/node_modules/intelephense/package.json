{
  "name": "intelephense",
  "version": "1.0.13",
  "description": "A PHP language server",
  "main": "./lib/intelephense.js",
  "files": [
    "/lib",
    "/CHANGELOG.md",
    "/README.md",
    "/LICENSE.txt",
    "/package.json"
  ],
  "scripts": {
    "test": "./node_modules/.bin/mocha -r ts-node/register test/**/*.ts",
    "build": "npm run clean && ./node_modules/.bin/tsc -p ./tsconfig.json && cp ./src/protobuf.json ./out/ && cp -R ./src/stub ./out/stub",
    "clean": "rm -rf ./out && mkdir ./out",
    "production": "rm -rf ./lib && ./node_modules/.bin/webpack --config webpack.config.js",
    "sourcemaps": "rm -rf ./lib && ./node_modules/.bin/webpack --config webpack.config.sourcemaps.js",
    "prepublishOnly": "npm run production"
  },
  "author": "Ben Mewburn <ben@mewburn.id.au>",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bin": {
    "intelephense": "./lib/intelephense.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmewburn/intelephense-docs"
  },
  "keywords": [
    "php",
    "intellisense",
    "completion",
    "parameters",
    "diagnostics",
    "format",
    "autocomplete",
    "symbols",
    "references",
    "linter",
    "lsp"
  ],
  "bugs": {
    "url": "https://github.com/bmewburn/intelephense-docs/issues"
  },
  "homepage": "http://intelephense.net/",
  "dependencies": {
    "fast-glob": "^2.2.6",
    "fs-extra": "^7.0.1",
    "js-beautify": "^1.9.1",
    "lru-cache": "^5.1.1",
    "micromatch": "^3.1.10",
    "protobufjs": "^6.8.8",
    "@bmewburn/turndown": "^5.0.3",
    "@bmewburn/turndown-plugin-gfm": "^1.0.2",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageserver": "^5.2.1",
    "vscode-languageserver-types": "^3.14.0",
    "vscode-uri": "^1.0.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/js-beautify": "^1.8.0",
    "@types/lru-cache": "^4.1.1",
    "@types/micromatch": "^3.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.24",
    "@types/sinon": "^7.0.5",
    "banner-webpack-plugin": "^0.2.3",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.0.2",
    "mocha": "^5.2.0",
    "sinon": "^7.3.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  }
}
